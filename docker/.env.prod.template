# Production Environment Variables
# Copy this file to .env.prod and fill in the actual values

# Database Configuration
POSTGRES_USER=nlp_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=nlp_translation_prod

# Redis Configuration
REDIS_PASSWORD=your_redis_password_here

# Application Security
SECRET_KEY=your_very_long_and_secure_secret_key_here
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com,localhost
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password_here

# External Services
ELASTICSEARCH_HOSTS=https://your-elasticsearch-cluster.com:9200

# Performance Configuration
GUNICORN_WORKERS=4
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=100
GUNICORN_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cache Configuration
REDIS_MAX_MEMORY=512mb
REDIS_EVICTION_POLICY=allkeys-lru

# Database Tuning
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB
POSTGRES_WORK_MEM=4MB

# Model Configuration
ML_MODEL_CACHE_SIZE=2GB
ML_MODEL_TIMEOUT=30
ML_BATCH_SIZE=32

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Alerts Configuration
ALERT_EMAIL=admin@yourdomain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
