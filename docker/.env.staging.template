# Staging Environment Variables
# Copy this file to .env.staging and fill in the actual values

# Database Configuration
POSTGRES_USER=nlp_user_staging
POSTGRES_PASSWORD=staging_password_here
POSTGRES_DB=nlp_translation_staging

# Redis Configuration
REDIS_PASSWORD=staging_redis_password_here

# Application Security
SECRET_KEY=staging_secret_key_here
ALLOWED_HOSTS=staging.yourdomain.com,api-staging.yourdomain.com,localhost
CORS_ORIGINS=https://staging.yourdomain.com

# SSL Configuration (use staging certs)
SSL_CERT_PATH=/etc/nginx/ssl/staging-cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/staging-key.pem

# Monitoring
GRAFANA_PASSWORD=staging_grafana_password_here

# External Services
ELASTICSEARCH_HOSTS=https://staging-elasticsearch.com:9200

# Performance Configuration (reduced for staging)
GUNICORN_WORKERS=2
GUNICORN_MAX_REQUESTS=500
GUNICORN_MAX_REQUESTS_JITTER=50
GUNICORN_TIMEOUT=30

# Logging (more verbose for debugging)
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Cache Configuration (smaller for staging)
REDIS_MAX_MEMORY=256mb
REDIS_EVICTION_POLICY=allkeys-lru

# Database Tuning (smaller for staging)
POSTGRES_MAX_CONNECTIONS=50
POSTGRES_SHARED_BUFFERS=128MB
POSTGRES_EFFECTIVE_CACHE_SIZE=512MB
POSTGRES_WORK_MEM=2MB

# Model Configuration (smaller cache for staging)
ML_MODEL_CACHE_SIZE=1GB
ML_MODEL_TIMEOUT=30
ML_BATCH_SIZE=16

# Rate Limiting (more permissive for testing)
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_BURST=20

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# Backup Configuration (less frequent for staging)
BACKUP_SCHEDULE=0 4 * * 0
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=your-staging-backup-bucket

# Alerts Configuration
ALERT_EMAIL=staging-admin@yourdomain.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/STAGING/WEBHOOK
