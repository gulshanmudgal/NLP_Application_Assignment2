# Environment variables for development
# Copy this file to .env and update values as needed

# Backend Configuration
DEBUG=True
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nlp_translation

# Redis Configuration
REDIS_URL=redis://localhost:6379

# ML Model Configuration
MODEL_CACHE_DIR=/app/ml_models/cache
INDICTRANS_MODEL_PATH=/app/ml_models/indictrans
MT5_MODEL_PATH=/app/ml_models/mt5

# API Configuration
API_V1_STR=/api/v1
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Translation Service Configuration
MAX_TEXT_LENGTH=1000
CACHE_TTL_SECONDS=3600
BATCH_SIZE=32

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_ENABLED=True

# Model Training Configuration
TRAINING_DATA_PATH=/app/data/samanantar
BATCH_SIZE_TRAINING=16
LEARNING_RATE=5e-5
NUM_EPOCHS=3

# Evaluation Configuration
EVAL_BATCH_SIZE=8
BLEU_METRIC_ENABLED=True
METEOR_METRIC_ENABLED=True
